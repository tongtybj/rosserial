<launch>

  <arg name="server_port" default="11411" />
  <arg name="client_port" default="11411" />
  <arg name="client_addr" default="127.0.0.1" />

  <node pkg="rosserial_server" type="udp_socket_node" name="rosserial_server">
    <param name="server_port" value="$(arg server_port)" />
    <param name="client_port" value="$(arg client_port)" />
    <param name="client_addr" value="$(arg client_addr)" />
  </node>
  <node pkg="rosserial_python" type="message_info_service.py" name="rosserial_message_info" />
</launch>
